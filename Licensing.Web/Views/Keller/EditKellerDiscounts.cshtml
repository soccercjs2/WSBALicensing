@model Licensing.Business.ViewModels.KellerDiscountsVM

@{
    ViewBag.Title = "Edit Keller Discounts";
}

<h2>Edit Donation Products</h2>

@using (Html.BeginForm("Edit", "KellerDiscount", FormMethod.Post))
{
    <hr />

    <div class="row">
        @Html.ActionLink("Return to Admin Dashboard", "Index", "Admin", null, new { @class = "btn btn-primary" })
        <input class="btn btn-success" type="submit" value="Sync" />
    </div>

    <hr />

    <div class="row">
        <div class="col-sm-4 dashboard-column">
            <h3><u>Active Discounts</u></h3>
            @if (Model.Discounts != null && Model.Discounts.Count > 0)
            {
                <table class="standard-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Code</th>
                        </tr>
                    </thead>
                    @for (int i = 0; i < Model.Discounts.Count; i++)
                    {
                        @Html.HiddenFor(m => Model.Discounts[i].KellerDiscountId)
                        @Html.HiddenFor(m => Model.Discounts[i].Name)
                        @Html.HiddenFor(m => Model.Discounts[i].AmsProductDiscountId)
                        @Html.HiddenFor(m => Model.Discounts[i].DiscountPercentage)
                        @Html.HiddenFor(m => Model.Discounts[i].Active)

                        <tr>
                            <td>@Model.Discounts[i].Name</td>
                            <td>@Model.Discounts[i].AmsProductDiscountId</td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <span>No discounts.</span>
            }
        </div>
        <div class="col-sm-4 dashboard-column">
            <h3><u>Discounts to be Added</u></h3>
            @if (Model.DiscountsToBeAdded != null && Model.DiscountsToBeAdded.Count > 0)
