@using Licensing.Domain.Enums;

@model Licensing.Business.ViewModels.DashboardContainerVM

<div class="dashboard-container @(Model.Complete ? "complete-border":"")">
    <div class="row dashboard-container-header @(Model.Complete ? "complete-background-color":"")">
        <div class="dashboard-container-title">
            @Model.Title

            @if (Model.RequirementType == RequirementType.Required)
            {
                <span class="required">*</span>
            }
        </div>
        <div class="dashboard-container-label-container">
            @if (Model.EditRoute != null)
            {
                @Html.ActionLink("Edit", Model.EditRoute.Action, Model.EditRoute.Controller, new { id = Model.EditRoute.Id }, new { @class = "btn btn-primary btn-xs" })
            }

            @if (Model.ConfirmRoute != null && !Model.Complete && Model.PartialViewData != null)
            {
                @Html.ActionLink("Confirm", Model.ConfirmRoute.Action, Model.ConfirmRoute.Controller, new { id = Model.ConfirmRoute.Id }, new { @class = "btn btn-success btn-xs" })
            }

            @if (Model.OptOutRoute != null)
            {
                @Html.ActionLink("Opt Out", Model.OptOutRoute.Action, Model.OptOutRoute.Controller, new { id = Model.OptOutRoute.Id }, new { @class = "btn btn-warning btn-xs" })
            }
        </div>
    </div>
    @if (Model.PartialViewData != null)
    {
        <div class="row dashboard-container-body">
            @Html.Partial(Model.PartialViewName, @Model.PartialViewData)
        </div>
    }
</div>