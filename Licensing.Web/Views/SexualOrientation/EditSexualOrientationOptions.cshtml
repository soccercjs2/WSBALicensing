@model Licensing.Business.ViewModels.SexualOrientationOptionsVM

@{
    ViewBag.Title = "Edit Sexual Orientation Options";
}

<h2>Edit Sexual Orientation Options</h2>

@using (Html.BeginForm("Edit", "SexualOrientationOption", FormMethod.Post))
{
    <hr />

    <div class="row">
        @Html.ActionLink("Return to Admin Dashboard", "Index", "Admin", null, new { @class = "btn btn-primary" })
        <input class="btn btn-success" type="submit" value="Sync" />
    </div>

    <hr />

    <div class="row">
        <div class="col-sm-4 dashboard-column">
            <h3><u>Active Codes</u></h3>
            @if (Model.Codes != null && Model.Codes.Count > 0)
            {
                <table class="standard-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Code</th>
                        </tr>
                    </thead>
                    @for (int i = 0; i < Model.Codes.Count; i++)
                    {
                        @Html.HiddenFor(m => Model.Codes[i].SexualOrientationOptionId)
                        @Html.HiddenFor(m => Model.Codes[i].Name)
                        @Html.HiddenFor(m => Model.Codes[i].AmsCode)
                        @Html.HiddenFor(m => Model.Codes[i].Active)

                        <tr>
                            <td>@Model.Codes[i].Name</td>
                            <td>@Model.Codes[i].AmsCode</td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <span>No codes.</span>
            }
        </div>
        <div class="col-sm-4 dashboard-column">
            <h3><u>Codes to be Added</u></h3>
            @if (Model.CodesToBeAdded != null && Model.CodesToBeAdded.Count > 0)
            {
                <table class="standard-table">
