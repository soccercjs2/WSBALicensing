@model Licensing.Domain.Addresses.Address

@if (Model != null)
{
    <div class="padded">
        <div class="row">@Model.Address1</div>

        @if (Model.Address2 != null)
        {
            <div class="row">@Model.Address2</div>
        }

        <div class="row">
            @Model.City, 

            @if (Model.State != null)
            { @Model.State.AmsCode }

            @Model.ZipCode
        </div>

        @if (Model.Country.AmsCode != "USA")
        {
            <div class="row">@Model.Country.Name</div>
        }
    </div>
}