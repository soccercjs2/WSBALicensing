@model Licensing.Domain.Addresses.Address

@if (Model != null)
{
    <div class="padded">
        <div class="row">@Model.Address1</div>

        @if (Model.Address2 != null)
        {
        <div class="row">@Model.Address2</div>
        }

        <div class="row">@Model.City, @Model.State @Model.ZipCode</div>

        @if (Model.Country != "USA")
        {
            <div class="row">@Model.Country</div>
        }
    </div>
}