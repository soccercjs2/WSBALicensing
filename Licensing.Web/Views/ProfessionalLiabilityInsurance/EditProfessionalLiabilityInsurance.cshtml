@model Licensing.Business.ViewModels.ProfessionalLiabilityInsuranceVM

@{
    ViewBag.Title = "Edit Professional Liability Insurance";
}

<h2>Professional Liability Insurance (<a href="http://www.courts.wa.gov/court_rules/?fa=court_rules.display&group=ga&set=APR&ruleid=gaapr26" target="_blank">APR 26</a>)</h2>
<h5>Learn more about <a href="http://www.wsba.org/Licensing-and-Lawyer-Conduct/Annual-License-Renewal/License-Renewal-FAQs/Professional-Liability-Insurance" target="_blank">Professional Liability Insurance</a>.</h5>

<hr />

@using (Html.BeginForm("Edit", "ProfessionalLiabilityInsurance", FormMethod.Post))
{
    @Html.HiddenFor(m => m.LicenseId)
    
    <div>
        @foreach (var option in Model.Options)
        {
            <div>
                @Html.RadioButtonFor(m => m.SelectedOptionId, option.ProfessionalLiabilityInsuranceOptionId) @option.Description
            </div>
        }
    </div>

    <hr />

    <div class="row margin-top">
        @Html.CheckBoxFor(m => m.Attested) By (1) <b>checking</b> the box to the left, and (2) <b>clicking</b> the Save button,
        I certify under penalty of perjury under the laws of the state of Washington that the foregoing information is true and correct.
    </div>

    <hr />

    <div class="row">
        @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-primary" })
        <input class="btn btn-success" type="submit" value="Save" />
    </div>
}