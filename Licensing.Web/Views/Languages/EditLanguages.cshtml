@model Licensing.Business.ViewModels.LanguageVM

@{
    ViewBag.Title = "Edit Languages";
}

<h2>Languages</h2>

<hr />

@using (Html.BeginForm("Edit", "Languages", FormMethod.Post))
{
    <div>
        @Html.HiddenFor(m => m.LicenseId)

        @for (int i = 0; i < Model.Options.Count; i++)
        {
            <div>
                @Html.HiddenFor(m => m.Options[i].LanguageOptionId)
                @Html.HiddenFor(m => m.Options[i].Name)
                @Html.HiddenFor(m => m.Options[i].PreSelected)

                @Html.CheckBoxFor(o => Model.Options[i].Selected) @Model.Options[i].Name
            </div>
        }
    </div>

    <hr />

    <div class="row">
        @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-primary" })
        <input class="btn btn-success" type="submit" value="Save" />
    </div>
}