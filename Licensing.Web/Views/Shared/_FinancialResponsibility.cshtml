@model Licensing.Domain.FinancialResponsibilities.FinancialResponsibility

@if (Model != null && Model.Confirmed)
{
    <div class="row padded">
        <div class="row padded-small">
            <div class="inline bold">Covered By:</div>
            <div class="inline">@Model.Option.Name</div>
        </div>
        <div class="row padded-small">
            <div class="inline bold">Company:</div>
            <div class="inline">@Model.Company</div>
        </div>
        <div class="row padded-small">
            <div class="inline bold">Policy Number:</div>
            <div class="inline">@Model.PolicyNumber</div>
        </div>
    </div>
}